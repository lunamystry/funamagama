#: kivy 1.8.0
#:import la kivy.adapters.listadapter
#:import lbl kivy.uix.label


<MainView>:
    canvas:
        Color:
            rgba: .3, .2, .8, self.opacity - 0.2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            canvas:
                Color:
                    rgba: .3, .3, .7, 0.9
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'FUNamagama'
                font_size: '30dp'

