#: kivy 1.8.0

<MainView>:
    grid: grid
    canvas:
        Color:
            rgba: .3, .2, .8, self.opacity - 0.2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            canvas:
                Color:
                    rgba: .3, .3, .7, 0.9
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'FUNamagama'
                font_size: '30dp'

        FloatLayout:
            Grid:
                id: grid
                rows: 1

<Grid@GridLayout>
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .9, .9
    canvas.before:
        Color:
            rgba: .2, .3, .4, 1
        Rectangle:
            size: self.size
            pos: self.pos
